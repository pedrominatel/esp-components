menu "Driver MC3479 Sensor"
            
    menu "I2C"
        config MC3479_I2C_NUM
            int "I2C peripheral index"
            default -1
            range -1 3
            help
                For auto select I2C peripheral, set to -1.

        config MC3479_I2C_SDA
            int "I2C SDA pin"
            default 2
            range 0 55
            help
                Set the I2C SDA pin for the data signal.

        config MC3479_I2C_SCL
            int "I2C SCL pin"
            default 1
            range 0 55
            help
                Set the I2C SCL pin for the clock signal.

        config MC3479_I2C_CLK_SPEED_HZ
            int "I2C clock speed (Hz)"
            default 100000
            range 10000 400000
            help
                Set the I2C clock speed in Hz.

        choice MC3479_I2C_ADDR
            prompt "MC3479 I2C address"
            default MC3479_I2C_ADDR_0
            help
                Select the I2C address based on the address selection pin state.

            config MC3479_I2C_ADDR_0
                bool "0x4C (Address pin to GND)"
            config MC3479_I2C_ADDR_1
                bool "0x6C (Address pin to VDD)"
        endchoice

        config MC3479_I2C_ADDRESS
            hex
            default 0x4C if MC3479_I2C_ADDR_0
            default 0x6C if MC3479_I2C_ADDR_1
    endmenu
  
endmenu
