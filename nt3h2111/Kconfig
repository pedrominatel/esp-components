menu "Driver NT3H2111 NFC/I2C Bridge"
            
    menu "I2C"
        config NT3H2111_I2C_NUM
            int "I2C peripheral index"
            default -1
            range -1 3
            help
                For auto select I2C peripheral, set to -1.

        config NT3H2111_I2C_SDA
            int "I2C SDA pin"
            default 21
            range 0 55
            help
                Set the I2C SDA pin for the data signal.

        config NT3H2111_I2C_SCL
            int "I2C SCL pin"
            default 22
            range 0 55
            help
                Set the I2C SCL pin for the clock signal.

        config NT3H2111_I2C_CLK_SPEED_HZ
            int "I2C clock speed (Hz)"
            default 100000
            range 10000 400000
            help
                Set the I2C clock speed in Hz. Maximum is 400kHz for NT3H2111.
    endmenu

    config NT3H2111_FD_PIN
        int "Field Detection (FD) GPIO pin"
        default 19
        range -1 55
        help
            GPIO pin connected to NT3H2111 Field Detection (FD) pin.
            Set to -1 to disable hardware field detection interrupt.
            When enabled, this pin generates an interrupt when an NFC field is detected.
  
endmenu
