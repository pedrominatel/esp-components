menu "Driver ST25DV NFC/I2C EEPROM"
            
    menu "I2C"
        config ST25DV_I2C_NUM
            int "I2C peripheral index"
            default -1
            range -1 3
            help
                For auto select I2C peripheral, set to -1.

        config ST25DV_I2C_SDA
            int "I2C SDA pin"
            default 21
            range 0 55
            help
                Set the I2C SDA pin for the data signal.

        config ST25DV_I2C_SCL
            int "I2C SCL pin"
            default 22
            range 0 55
            help
                Set the I2C SCL pin for the clock signal.

        config ST25DV_I2C_CLK_SPEED_HZ
            int "I2C clock speed (Hz)"
            default 100000
            range 10000 400000
            help
                Set the I2C clock speed in Hz. Maximum is 400 kHz for ST25DV.
    endmenu

    config ST25DV_GPO_PIN
        int "GPO interrupt GPIO pin"
        default -1
        range -1 55
        help
            GPIO pin connected to ST25DV GPO (General Purpose Output) pin.
            Set to -1 to disable hardware interrupt support.
            When enabled, this pin generates interrupts for configured events
            (RF field detection, mailbox events, RF write events, etc.).

endmenu
